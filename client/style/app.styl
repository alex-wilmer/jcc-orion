@import 'jeet'

global-reset()

body
  font-family 'Roboto', Verdana

body,
html 
  height 100%  

a
  cursor pointer
  
h1
  font-size 3em
  
h2
  font-size 2em
  
h3
  font-size 1.5em
  
h4
  font-size 1.2em

h5
  color silver
  font-size 0.8em
  margin 6px 0

*, *:before, *:after
  box-sizing border-box
  
// edit() 

// Utility

.full
  width 100%

// Extends

$minPad
  padding 0 20px

// Layouts
  
trueHeight(height)
  & > *
    line-height height
  height height

row(height)
  width 100%
  & > * 
    float left
  & > *:first-child
    @extend $minPad
  trueHeight(height)

headerFooterLayout(headerHeight, footerHeight)
  .wrapper
    position relative
    min-height 100%
    
    .header   
      position fixed
      z-index 100
      row(headerHeight)
      +above(3)
        .nav-icon
          display none
    
    .main
      height 100% 
      padding headerHeight 0 footerHeight
        
    .footer
      position absolute
      bottom 0 
      row(footerHeight)

articleAsideLayout(padding)

  .main:after
    content ''
    display block
    clear both

  article,
  .left-aside,
  .right-aside  
    height 100%
    
  article
    height 100%
    min-height 1px
    +above(4)
      span(5/6)
    +below(2)
      span(1/1)
    
  .right-aside  
    span(1/6)
    height 100%
    +below(3)
      display none    

  .left-aside
    span(1/5)
    height 100%
    z-index 100
    a
      display block
      line-height 40px
      font-size 1.2em
      @extend $minPad  
    +above(3)
      display none
    +below(2)
      position fixed
      width 75%
      height 'calc(100% - %spx)' % padding
      
    &.active
      animation expand 0.5s ease forwards 
      
    &.inactive
      animation retract 0.5s ease forwards     
      
  @keyframes expand
    from {transform: translateX(-100%)}
    to {transform: translateX()}
    
  @keyframes retract
    from {transform: translateX()}
    to {transform: translateX(-100%)}

// Title

.header
  .title
    padding-left 40px
    +above(3)
      display none
    
// Navigation

.nav-icon
  float left
  user-select none
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-tap-highlight-color transparent /* For some Androids */  

.nav-icon + .title
  width 200px

.nav
  @extend $minPad
  font-size 0.7em
  a,
  a:visited
    color white
    text-decoration none
    text-transform uppercase
  a.active,  
  a:hover
    color green
  a + a
    margin-left 10px
  +below(2)
    display none
  

// Positioning
 
posY(n)
  position relative
  top (n)%
  transform translateY(-(n)%)
  
// Form Elements

.btn
  cursor pointer

// Layout Build

headerHeight = 60
footerHeight = 0
msinPadding = headerHeight + footerHeight

headerPx = '%spx' % headerHeight
footerPx = '%spx' % footerHeight

headerFooterLayout(headerPx, footerPx)
articleAsideLayout(msinPadding)

// max-width

.max
  max-width 1400px
  margin 0 auto

// Grid

.center
  text-align center
  +above(3)
    width 100%
  
